{
    "manifest_version": 2,
    "name": "Block Site",
    "description": "A simple website blacklist.",
    "version": "1.0.0",
    "permissions": [
        "tabs", 
        "storage"
    ],
    "browser_action": {
        "default_popup": "html/popup.html"
    },
    "background": {
        "scripts": ["js/main.js"],
        "persistent": true
    }
}